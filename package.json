{
  "name": "electron-react-antd-template",
  "version": "1.0.0",
  "description": "An enterprise-level Electron application template with React and Ant Design",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000 && npm run electron-start\"",
    "react-start": "cross-env BROWSER=none react-scripts start",
    "electron-start": "electron .",
    "build": "react-scripts build",
    "electron-build": "electron-builder",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "build": {
    "appId": "com.example.electron-react-antd",
    "productName": "Electron React Antd Template",
    "directories": {
      "output": "release/"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^5.0.0",
    "antd": "^5.0.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "cross-env": "^7.0.3",
    "electron": "^24.0.0",
    "electron-builder": "^24.0.0",
    "react-scripts": "^5.0.1",
    "wait-on": "^7.0.1"
  },
  "keywords": [
    "electron",
    "react",
    "antd",
    "template"
  ],
  "author": "Your Name",
  "license": "MIT",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
